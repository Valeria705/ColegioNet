@{
    ViewBag.Menu = "Aula";
}

<h2>Modificar</h2>

<form action="/Aula/ModificarFormlario">

    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Id</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="Id_Aula" value="@Model.Id_Aula">
    </div>

    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Nombre</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="Nom_Aula" value="@Model.Nom_Aula">
    </div>

    <br /> <br />
    <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
</form>