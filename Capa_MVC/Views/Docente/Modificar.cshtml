
@using Capa_Entidad
@model CE_Docente
@{
    ViewBag.Menu = "Docente";
}

<h2>Modificar</h2>

<form action="/Docente/ModificarFormlario">

    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Id</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="ID_Docente" value="@Model.Id_Docente">
    </div>

    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Nombre</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="Nom_Docente" value="@Model.Nom_Docente">
    </div>
    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Direccion</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="Dire_Docente" value="@Model.Dire_Docente">
    </div>
    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Telefono</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="Tel_Docente" value="@Model.Tel_Docente">
    </div>

    <br /> <br />
    <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />

</form>
