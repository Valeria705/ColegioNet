

@using Capa_Entidad
@model CE_Especialidad
@{
    ViewBag.Menu = "Especialidad";
}
<h2>Modificar</h2>

<form action="/Especialidad/ModificarFormlario">

    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Id</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="Id_Especialidad" value="@Model.Id_Especialidad">
    </div>

    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Nombre</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="Nom_Especialidad" value="@Model.Nom_Especialidad">
    </div>

    <br /> <br />
    <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />

</form>

