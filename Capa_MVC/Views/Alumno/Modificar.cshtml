
@{
    ViewBag.Menu = "Alumno";
}

<h2>Modificar</h2>


<div class="bd-example-snippet bd-code-snippet">
    <form action="/Alumno/ModificarFormlario">
        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Id</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="Id_Alumno" value="@Model.Id_Alumno">
        </div>

        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Nombre</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="Nom_Alumno" value="@Model.Nom_Alumno">
        </div>
        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Direccion</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="Dir_Alumno" value="@Model.Dir_Alumno">
        </div>
        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Telefono</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="Tel_Alumno" value="@Model.Tel_Alumno">
        </div>
        <div class="input-group input-group-sm mb-3">
            <span class="input-group-text" id="inputGroup-sizing-sm">Grupo</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="Grp_Alumno" value="@Model.Grp_Alumno">
        </div>



        <br /> <br />
        <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />

    </form>
</div>